@model teatsite.Models.LoginModel

@{
    ViewBag.Title = "Веб удирдлагад нэвтрэх";
}

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


            <div class="well col-md-5 center login-box">
                <div class="alert alert-info">
                    Нэр болон нууц үг оруулна уу!!!
                </div>
                <form class="form-horizontal" action="index.html" method="post">
                    <fieldset>
                        <legend>Нэвтрэх хэсэг</legend>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                       
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Нэр" })
                            @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        <div class="clearfix"></div><br>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                               
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Нууц үг" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>

                        <div class="clearfix"></div>
                        <div class="input-prepend">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @class = "remember" })
                       
                        </div>
                           

                        <div class="clearfix"></div>
                        <p class="center col-md-5">
                            <button type="submit" class="btn btn-primary">Нэвтрэх</button>
                        </p>
</fieldset>


                  
                </form>
            </div>




}
