@model teatsite.Models.RegisterModel
@{
    ViewBag.Title = "Шинээр бүртгүүлэх хэсэг";
}

<hgroup class="title">
    <h1 style="text-align:center;">@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
                <div class="well col-md-5 center login-box">
                <div class="alert alert-info">
                    Хэрэглэгчийн нэр болон нууц үг оруулна уу!!!
                </div>
                <form class="form-horizontal" action="index.html" method="post">
                    <fieldset>
                        <legend>Шинээр бүртгүүлэх хэсэг</legend>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                       
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Нэр" })
                            @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        <div class="clearfix"></div><br>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                               
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Нууц үг" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>

                        <div class="clearfix"></div><br>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>

                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Нууц үгээ дахин хийнэ үү!!!" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>

                  
                           

                        <div class="clearfix"></div>
                        <p class="center col-md-5">
                            <button type="submit" class="btn btn-primary">Бүртгүүлэх</button>
                        </p>
</fieldset>


                  
                </form>
            </div>
}



