@model PagedList.IPagedList<teatsite.Models.tNews>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_Layout_reading.cshtml";
}

@{
    var med = "_medium.jpg";
}
<div class="content_title"><h2>Сүүлийн үеийн мэдээ</h2></div>
<div class="clearfix single_work_container">
    @foreach (var item in Model)
    {
        ViewBag.Title = item.tMenu.name;

        <div class="clearfix single_work">
            <a href="~/n/post/@item.news_id"><img class="img_top" src="~/news-images/@item.images@med" alt="" /></a>
            <a href="~/n/post/@item.news_id"><img class="img_bottom" src="~/images/work_bg2.png" alt="" /></a>
            <h2>@item.tSubmenu.name</h2>
            <a href="~/n/post/@item.news_id">
                <p class="caption">
                    @item.title
                </p>
            </a>
        </div>
        
